<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="customUserDetailsService" class="com.cultura.security.CustomUserDetailsService"></bean>
    
    <security:http use-expressions="true">
        <security:intercept-url pattern="/admin/**" access="hasAuthority('ROLE_ADMIN')" />
        <security:intercept-url pattern="/board/register*/**" access="hasRole('USER')" />
        <security:intercept-url pattern="/member/**" access="isAuthenticated()" />
        <security:intercept-url pattern="/login*" access="permitAll"/>
        <security:intercept-url pattern="/**" access="permitAll"/>
        <security:form-login login-page="/login/loginForm" default-target-url="/home" 
                             login-processing-url="/login" always-use-default-target="true"/>
        <security:logout />
    </security:http>

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="customUserDetailsService">
            <!-- <security:jdbc-user-service data-source-ref="dataSource" id="jdbcUserService" /> -->
            <!-- <security:user-service>
                <security:user name="dhchoi" password="1234" authorities="MEMBER" />
                <security:user name="manager" password="qwer" authorities="ROLE_MANAGER" />
                <security:user name="admin" password="asdf" authorities="ROLE_ADMIN,ROLE_USER" />
            </security:user-service> -->
        </security:authentication-provider>
    </security:authentication-manager>
</beans>
